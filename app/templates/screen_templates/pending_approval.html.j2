{% extends "screen_templates/base.html.j2" %}

{% block styles %}
    {{ super() }}
    <style>
        #approval_container {
            text-align: center;
            width: 100%;
            height: 100%;
        }
        .title, .description {
            display: none;
        }

        @media (min-width: 240px) {
            .title {
                display: block;
            }
        }
        @media (min-width: 480px) {
            .description {
                display: block;
            }
        }

        @media (min-width: 600px) {
            #approval_container {
                display: flex;
                flex-direction: column;
                justify-content: center;
            }
            #approval_wrapper {
                padding: 2em;
            }
        }
    </style>
{% endblock %}

{% block content %}
    <div id="approval_container">
        <div id="approval_wrapper">
            <h2 class="title">Display Setup</h2>
            <p class="description">This display must be approved before it is used, verify that the code displayed here matches the one displayed in the screen list</p>
            <h4 class="label">Code:</h4>
            <h1 class="code">{{ g.display.approval_code }}</h1>
        </div>
    </div>
{% endblock %}
