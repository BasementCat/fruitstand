{% extends "base.html.j2" %}

{% block styles %}
    {{ super() }}
    <style>
        #error_container {
            text-align: center;
            width: 100%;
            height: 100%;
        }
        .image, .error {
            display: none;
        }
        @media (max-width: 239px) {
            .title {
                font-size: 16px;
            }
        }
        .image { grid-area: image; }
        .text { grid-area: text; }
        .title { margin: 0; }

        @media (min-width: 240px) {
            .image {
                display: inline-block;
                width: 48px;
            }
        }
        @media (min-width: 320px) {
            #error_container, #error_wrapper {
                width: 100%;
                height: 100%;
                text-align: left;
            }
            #error_wrapper {
                margin: 0.5em;
                display: grid;
                grid-gap: 1em;
                grid-template-columns: 1fr 3fr;
                grid-template-rows: 1fr;
                grid-template-areas: "image text";
            }
            .image {
                width: 100%;
            }
        }
        @media (min-width: 480px) {
            .error {
                display: block;
            }
        }
    </style>
{% endblock %}

{% block content %}
    <div id="error_container">
        <div id="error_wrapper">
            <img class="image" src="{{ url_for('fruitstand_error.static', filename='images/error.svg') }}">
            <div class="text">
                <h1 class="title">{{ screen.context.extra.error.title if screen.context.extra and screen.context.extra.error else "Error" }}</h1>
                <p class="error">
                    {{ screen.context.extra.error.message if screen.context.extra and screen.context.extra.error else "Unknown Error" }}
                    {% if screen.context.extra and screen.context.extra.error %}
                        <br>
                        <small>ID: {{ screen.context.extra.error.id }}</small>
                    {% endif %}
                </p>
            </div>
        </div>
    </div>
{% endblock %}
